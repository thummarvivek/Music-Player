                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/avtar11" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cceditimg012"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:elevation="5dp"
                    android:padding="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/profilecircle"
                    app:cardCornerRadius="150dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/editimg012"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/avtar12" />
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/mr_dafoe"
            android:gravity="center"
            android:text="Edit profile"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="italic" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColorHint="@color/gray"
            app:boxStrokeColor="@color/Darkpink"
            app:startIconDrawable="@drawable/baseline_tag_faces_24"
            app:startIconTint="@color/Darkpink">

            <EditText
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Name"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:maxLength="13"
                android:textColorHint="@color/gray"
                android:textStyle="bold"
                tools:ignore="SpeakableTextPresentCheck"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColorHint="@color/gray"
            app:boxStrokeColor="@color/Darkpink"
            app:startIconDrawable="@drawable/user"
            app:startIconTint="@color/Darkpink">

            <EditText
                android:id="@+id/Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="UserName"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:maxLength="15"
                android:textColorHint="@color/gray"
                android:textStyle="bold"
                tools:ignore="SpeakableTextPresentCheck"/>

        </com.google.android.material.textfield.TextInputLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColorHint="@color/gray"
            app:boxStrokeColor="@color/Darkpink"
            app:startIconDrawable="@drawable/edit"
            app:startIconTint="@color/Darkpink">

            <EditText
                android:id="@+id/Bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Bio"
                android:maxLength="20"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textColorHint="@color/gray"
                android:textStyle="bold"
                tools:ignore="SpeakableTextPresentCheck"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <Button
            android:id="@+id/profilebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/Darkpink"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="submit" />

    </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>